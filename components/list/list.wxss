/* components/list/list.wxss */

.section{
  font-size: 24rpx;
  text-align: left;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #e2e2e2;
  min-height: 120rpx;
  padding: 10rpx 0;
}

.avatar{
  width: 100rpx;
  height: 100rpx;
  background-color: #eeeeee;
  border-radius: 5rpx;
  margin-right: 20rpx;
}

.item-row{
  display: flex;
  flex-direction: column;
}

.item-title{
  font-size: 28rpx;
  font-weight: 500;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.node-info{
  font-size: 18rpx;
  color: #999;
  margin-top: 10rpx;
}

.node-title{
  background-color: #f5f5f5;
  padding: 2rpx 5rpx;
  border-radius: 2rpx;
}

.member-username {
  color: #778087;
  font-weight: bold;
}